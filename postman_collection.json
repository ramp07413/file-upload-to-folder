{
	"info": {
		"_postman_id": "YOUR_COLLECTION_ID",
		"name": "File Upload API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_collection_id": "YOUR_COLLECTION_ID"
	},
	"item": [
		{
			"name": "Upload Image",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "image",
							"type": "file",
							"src": "/path/to/your/image.jpg"
						}
					]
				},
				"url": {
					"raw": "http://localhost:3000/upload/image",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"upload",
						"image"
					]
				},
				"description": "Uploads an image file. Replace /path/to/your/image.jpg with the actual path to your image file."
			},
			"response": []
		},
		{
			"name": "Upload File",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": "/path/to/your/file.txt"
						}
					]
				},
				"url": {
					"raw": "http://localhost:3000/upload/file",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"upload",
						"file"
					]
				},
				"description": "Uploads a general file. Replace /path/to/your/file.txt with the actual path to your file."
			},
			"response": []
		},
		{
			"name": "Read File",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:3000/file/:filename",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"file",
						":filename"
					],
					"variable": [
						{
							"key": "filename",
							"value": "YOUR_FILENAME_HERE.jpg",
							"description": "Replace with the actual filename (e.g., 1678888888888-myimage.jpg or 1678888888888-mydocument.txt)"
						}
					]
				},
				"description": "Reads and serves a file. Replace :filename with the actual filename of the uploaded file."
			},
			"response": []
		},
		{
			"name": "Update File",
			"request": {
				"method": "PUT",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": "/path/to/your/new_file.txt"
						}
					]
				},
				"url": {
					"raw": "http://localhost:3000/file/:filename",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"file",
						":filename"
					],
					"variable": [
						{
							"key": "filename",
							"value": "YOUR_FILENAME_HERE.txt",
							"description": "Replace with the actual filename of the file to update."
						}
					]
				},
				"description": "Updates an existing file. Replace :filename with the actual filename and provide the new file content. Note: Multer will save the new file with a new name, and the server will rename it to match the original filename."
			},
			"response": []
		},
		{
			"name": "Delete File",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "http://localhost:3000/file/:filename",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"file",
						":filename"
					],
					"variable": [
						{
							"key": "filename",
							"value": "YOUR_FILENAME_HERE.txt",
							"description": "Replace with the actual filename of the file to delete."
						}
					]
				},
				"description": "Deletes a file. Replace :filename with the actual filename of the file to delete."
			},
			"response": []
		}
	]
}